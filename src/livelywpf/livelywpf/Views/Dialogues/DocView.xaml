<Window
    x:Class="livelywpf.Views.Dialogues.DocView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:livelywpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="DocView"
    Width="800"
    Height="450"
    ui:ThemeManager.IsThemeAware="True"
    ui:TitleBar.ExtendViewIntoTitleBar="False"
    ui:WindowHelper.UseModernWindowStyle="True"
    BorderBrush="{DynamicResource SystemControlHighlightAltListAccentHighBrush}"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <FlowDocumentScrollViewer
            Name="flowDocumentViewer"
            Grid.Row="1"
            Margin="10"
            Foreground="Black"
            VerticalScrollBarVisibility="Visible">
            <FlowDocument
                Name="flowDocument"
                Background="WhiteSmoke"
                Hyperlink.RequestNavigate="FlowDocument_RequestNavigate" />
        </FlowDocumentScrollViewer>
    </Grid>
</Window>
