<Page
    x:Class="livelywpf.Views.SetupWizard.PageFinal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:livelywpf.Views.SetupWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:livelywpf.Properties"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="PageFinal"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <DockPanel>
            <Image
                Margin="0,5,0,0"
                DockPanel.Dock="Left"
                Source="pack://application:,,,/Resources/tutorial_systray.png"
                Stretch="Uniform" />
            <StackPanel Margin="10,10,0,0">
                <TextBlock
                    FontSize="25"
                    FontWeight="Bold"
                    Text="{x:Static p:Resources.TextCompleted}"
                    TextWrapping="Wrap" />
                <TextBlock Text="{x:Static p:Resources.DescriptionMinimizedTray}" TextWrapping="Wrap" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
