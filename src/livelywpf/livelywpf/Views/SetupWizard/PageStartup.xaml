<Page
    x:Class="livelywpf.Views.SetupWizard.PageStartup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:livelywpf.Views.SetupWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:livelywpf.Properties"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="PageStartup"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock FontSize="20" Text="{x:Static p:Resources.TitleWindowsStartup}" />
            <ui:ToggleSwitch IsOn="{Binding IsStartup, Mode=TwoWay}" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="12"
                Foreground="Gray"
                Text="{x:Static p:Resources.TipWindowsStartup}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>
